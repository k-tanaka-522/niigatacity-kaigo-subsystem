{
  "SCPPolicies": {
    "deny-root-account": {
      "Description": "ルートユーザーでのAPI操作を禁止（緊急時を除く）",
      "AppliesTo": "全アカウント",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyRootAccount",
            "Effect": "Deny",
            "Action": "*",
            "Resource": "*",
            "Condition": {
              "StringLike": {
                "aws:PrincipalArn": "arn:aws:iam::*:root"
              }
            }
          }
        ]
      }
    },
    "require-mfa": {
      "Description": "MFAが有効でない場合、API操作を禁止",
      "AppliesTo": "全アカウント",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyAllActionsWithoutMFA",
            "Effect": "Deny",
            "Action": "*",
            "Resource": "*",
            "Condition": {
              "BoolIfExists": {
                "aws:MultiFactorAuthPresent": "false"
              },
              "StringNotEquals": {
                "aws:PrincipalType": "AssumeRole"
              }
            }
          }
        ]
      }
    },
    "deny-region-outside-tokyo-osaka": {
      "Description": "東京リージョン（ap-northeast-1）と大阪リージョン（ap-northeast-3）以外のリソース作成を禁止",
      "AppliesTo": "全アカウント",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyRegionOutsideTokyoOsaka",
            "Effect": "Deny",
            "Action": [
              "ec2:RunInstances",
              "rds:CreateDBInstance",
              "elasticache:CreateCacheCluster",
              "ecs:CreateCluster",
              "s3:CreateBucket"
            ],
            "Resource": "*",
            "Condition": {
              "StringNotEquals": {
                "aws:RequestedRegion": [
                  "ap-northeast-1",
                  "ap-northeast-3"
                ]
              }
            }
          }
        ]
      }
    },
    "deny-ebs-unencrypted": {
      "Description": "暗号化されていないEBSボリュームの作成を禁止",
      "AppliesTo": "本番環境OU、ステージング環境OU",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyUnencryptedEBS",
            "Effect": "Deny",
            "Action": [
              "ec2:CreateVolume",
              "ec2:RunInstances"
            ],
            "Resource": "*",
            "Condition": {
              "Bool": {
                "ec2:Encrypted": "false"
              }
            }
          }
        ]
      }
    },
    "deny-s3-public-access": {
      "Description": "S3バケットのパブリックアクセスを禁止",
      "AppliesTo": "本番環境OU、ステージング環境OU",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyS3PublicAccess",
            "Effect": "Deny",
            "Action": [
              "s3:PutBucketPublicAccessBlock",
              "s3:PutAccountPublicAccessBlock"
            ],
            "Resource": "*",
            "Condition": {
              "Bool": {
                "s3:BlockPublicAcls": "false",
                "s3:BlockPublicPolicy": "false",
                "s3:IgnorePublicAcls": "false",
                "s3:RestrictPublicBuckets": "false"
              }
            }
          },
          {
            "Sid": "DenyS3PublicBucketPolicy",
            "Effect": "Deny",
            "Action": "s3:PutBucketPolicy",
            "Resource": "*",
            "Condition": {
              "StringEquals": {
                "s3:x-amz-acl": [
                  "public-read",
                  "public-read-write"
                ]
              }
            }
          }
        ]
      }
    },
    "deny-access-key-creation": {
      "Description": "アクセスキーの作成を禁止（IAMロール推奨）",
      "AppliesTo": "全アカウント（オプション）",
      "Note": "デジタル庁承認時のみ例外を許可する場合は、このSCPを適用",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyAccessKeyCreation",
            "Effect": "Deny",
            "Action": [
              "iam:CreateAccessKey",
              "iam:UpdateAccessKey"
            ],
            "Resource": "*"
          }
        ]
      }
    },
    "require-cloudtrail-enabled": {
      "Description": "CloudTrailの無効化を禁止",
      "AppliesTo": "全アカウント",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyCloudTrailDisable",
            "Effect": "Deny",
            "Action": [
              "cloudtrail:StopLogging",
              "cloudtrail:DeleteTrail"
            ],
            "Resource": "*"
          }
        ]
      }
    },
    "require-aws-config-enabled": {
      "Description": "AWS Configの無効化を禁止",
      "AppliesTo": "全アカウント",
      "Policy": {
        "Version": "2012-10-17",
        "Statement": [
          {
            "Sid": "DenyConfigDisable",
            "Effect": "Deny",
            "Action": [
              "config:StopConfigurationRecorder",
              "config:DeleteConfigurationRecorder",
              "config:DeleteDeliveryChannel"
            ],
            "Resource": "*"
          }
        ]
      }
    }
  },
  "SCPApplicationPlan": [
    {
      "PolicyName": "deny-root-account",
      "Target": "Root OU（全アカウント継承）"
    },
    {
      "PolicyName": "require-mfa",
      "Target": "Root OU（全アカウント継承）"
    },
    {
      "PolicyName": "deny-region-outside-tokyo-osaka",
      "Target": "Root OU（全アカウント継承）"
    },
    {
      "PolicyName": "require-cloudtrail-enabled",
      "Target": "Root OU（全アカウント継承）"
    },
    {
      "PolicyName": "require-aws-config-enabled",
      "Target": "Root OU（全アカウント継承）"
    },
    {
      "PolicyName": "deny-ebs-unencrypted",
      "Target": "本番環境 OU、ステージング環境 OU"
    },
    {
      "PolicyName": "deny-s3-public-access",
      "Target": "本番環境 OU、ステージング環境 OU"
    },
    {
      "PolicyName": "deny-access-key-creation",
      "Target": "全アカウント（オプション、要件に応じて適用）"
    }
  ],
  "Notes": {
    "MFAException": "require-mfa ポリシーでは、IAMロール（AssumeRole）経由のアクセスはMFA不要（ロール引き受け時にMFA検証済みのため）",
    "AccessKeyException": "deny-access-key-creation は、GCAS要件に準拠する場合に適用。CI/CD用のアクセスキーが必要な場合は、デジタル庁の承認を得て例外を設定",
    "RegionException": "グローバルサービス（IAM、CloudFront、Route 53等）は ap-northeast-1 以外でも操作可能",
    "EmergencyAccess": "緊急時のルートアカウントアクセスは、SCPを一時的に解除して対応"
  }
}
